@using Microsoft.AspNetCore.Identity
@using HahaBuch.Data
@using Microsoft.Extensions.Localization

@inject SignInManager<ApplicationUserEntity> SignInManager
@inject IStringLocalizer<SharedResources> Loc

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage" Match="NavLinkMatch.All">@Loc["Profile"]</NavLink>
    </li>
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/ChangePassword">@Loc["Password"]</NavLink>
    </li>
    <AuthorizeView>
        @if(context.User.HasClaim("IsSuperUser", "true"))
        {
            <li class="nav-item">
                <NavLink class="nav-link" href="Account/Manage/UserOverview">@Loc["UserOverview"]</NavLink>
            </li>
        }
    </AuthorizeView>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/Language">@Loc["Language"]</NavLink>
    </li>
    <li class="nav-item">
        <NavLink class="nav-link" href="Account/Manage/PersonalData">@Loc["PersonalData"]</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }

}