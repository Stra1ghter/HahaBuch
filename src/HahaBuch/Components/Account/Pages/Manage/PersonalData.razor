@page "/Account/Manage/PersonalData"
@using Microsoft.Extensions.Localization

@inject IdentityUserAccessor UserAccessor
@inject IStringLocalizer<UserOverview> UsersLoc
@inject IStringLocalizer<SharedResources> SharedLoc

<PageTitle>@UsersLoc["PersonalData"]</PageTitle>

<StaticStatusMessage/>
<h3>@UsersLoc["PersonalData"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@UsersLoc["PersonalDataHint"]</p>
        <p>
            <strong>@UsersLoc["PersonalDataDeleteHint"]</strong>
        </p>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken/>
            <button class="btn btn-primary m-3" type="submit">Download</button>
        </form>
        <p>
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger m-3">@SharedLoc["Delete"]</a>
        </p>
    </div>
</div>

@code {
    [CascadingParameter] private HttpContext HttpContext { get; set; } = default!;

    // TODO: implement deletion
    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
        
    }
}